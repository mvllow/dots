set $alt Mod1
set $super Mod4

set $left h
set $down j
set $up k
set $right l
set $term foot
set $menu wmenu-run

font pango:JetBrains Mono 9

# remove title bars
default_border pixel

# wallpaper
output * bg ~/Pictures/wallpapers/wall.jpg fill

exec swayidle -w \
         timeout 300 'swaylock -f -c 000000' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000'

# keyboard
input "type:keyboard" xkb_options caps:swapescape

# apple trackpad
input "1452:849:Apple_MTP_multi-touch" {
    dwt enabled
    # tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

bindsym $alt+Return exec $term
bindsym $super+Space exec $menu
bindsym $super+q kill


# drag + $alt to move windows
floating_modifier $alt normal

bindsym $alt+Shift+c reload

bindsym $alt+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# focus windows
bindsym $alt+h focus left
bindsym $alt+j focus down
bindsym $alt+k focus up
bindsym $alt+l focus right
bindsym $alt+Left focus left
bindsym $alt+Down focus down
bindsym $alt+Up focus up
bindsym $alt+Right focus right

# move windows
bindsym $alt+Shift+h move left
bindsym $alt+Shift+j move down
bindsym $alt+Shift+k move up
bindsym $alt+Shift+l move right
bindsym $alt+Shift+Left move left
bindsym $alt+Shift+Down move down
bindsym $alt+Shift+Up move up
bindsym $alt+Shift+Right move right

# workspace
bindsym $alt+1 workspace number 1
bindsym $alt+2 workspace number 2
bindsym $alt+3 workspace number 3
bindsym $alt+4 workspace number 4
bindsym $alt+5 workspace number 5
bindsym $alt+6 workspace number 6
bindsym $alt+7 workspace number 7
bindsym $alt+8 workspace number 8
bindsym $alt+9 workspace number 9
bindsym $alt+Shift+1 move container to workspace number 1
bindsym $alt+Shift+2 move container to workspace number 2
bindsym $alt+Shift+3 move container to workspace number 3
bindsym $alt+Shift+4 move container to workspace number 4
bindsym $alt+Shift+5 move container to workspace number 5
bindsym $alt+Shift+6 move container to workspace number 6
bindsym $alt+Shift+7 move container to workspace number 7
bindsym $alt+Shift+8 move container to workspace number 8
bindsym $alt+Shift+9 move container to workspace number 9

bindsym $alt+b splith
bindsym $alt+v splitv

bindsym $alt+s layout stacking
bindsym $alt+w layout tabbed
bindsym $alt+e layout toggle split

bindsym $alt+f fullscreen

bindsym $alt+Shift+space floating toggle

bindsym $alt+space focus mode_toggle

bindsym $alt+a focus parent

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $alt+r mode "resize"

# volume
bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%-
bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%+

# brightness
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+

# Special key to take a screenshot with grim
bindsym Control+Shift+3 exec grim ~/Pictures/screenshot_$(date +'%Y-%m-%d_%H-%M-%S').png

bar {
    height 20px
    position top

    status_command while ~/.config/sway/bar.sh; do sleep 1; done

    colors {
        statusline #fafafa
        background #01010140
        inactive_workspace #01010140 #01010140 #fafafa
        focused_workspace #ea9d34 #ea9d34 #fafafa
    }
}

client.focused          #000000 #000000 #ffffff #ffffff #000000
client.unfocused        #222222 #222222 #888888 #888888 #222222
client.urgent           #000000 #000000 #ffffff #ffffff #000000
client.background       #000000

exec_always ~/.config/sway/weather.sh
exec_always dunst
exec_always nm-applet

include /etc/sway/config.d/*
